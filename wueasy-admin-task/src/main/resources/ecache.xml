<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="ehcache.xsd">
	
	<diskStore path="F:/ehcache/"></diskStore>

    <!-- 站点缓存 -->
    <cache name="siteMap"
           maxEntriesLocalHeap="1000"
           timeToLiveSeconds="3600">
    </cache>
    
    <!-- 模板变量 -->
    <cache name="varMap"
           maxEntriesLocalHeap="1000"
           timeToLiveSeconds="3600">
    </cache>
    
    <!-- 获取栏目缓存 -->
    <cache name="catalogMap"
           maxEntriesLocalHeap="1000"
           timeToLiveSeconds="3600">
    </cache>
    
</ehcache>